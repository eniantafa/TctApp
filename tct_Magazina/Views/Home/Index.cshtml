@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/20157645_1496191107069351_238863805104897727_o.png" alt="ASP.NET" class="img-responsive"/>
            <div class="carousel-caption" role="option">
                <p>
                   Tirana Center of Technology
                    <a class="btn btn-default" href="https://it.tct.al/">
                        Visit page
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/20229849_1496200117068450_6343799404034510580_o.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    ASP.NET Core MVC Course
                    <a class="btn btn-default" href="https://docs.microsoft.com/en-us/">
                        Explore Docs
                    </a>
                </p>
            </div>
        </div>
       
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
</a>
<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
</a>
</div>

<div class="row">
    <div class="col-md-3">
        <h3>Information</h3>
        <ul>
            <li><a class="btn-default" asp-area="" asp-controller="Home" asp-action="About">About</a></li>
            <li><a class="btn-default" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h3>Explore the Database</h3>
        <ul>
            <li> <a class="btn-default info" asp-area="" asp-controller="Manager" asp-action="GetAllManagers" style="border-top-width:medium">Managers</a></li>
            <li> <a class="btn-default info" asp-area="" asp-controller="Sector" asp-action="GetAllSectors">Sectors</a></li>
            <li> <a class="btn-default info" asp-area="" asp-controller="Warehouse" asp-action="GetAllWarehouses">Warehouses</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h3>Add New Item</h3>
        <ul>
            <li> <a class="btn-default success" asp-area="" asp-controller="Manager" asp-action="CreateManager" style="border-top-width:medium">New Manager</a></li>
            <li> <a class="btn-default success" asp-area="" asp-controller="Sector" asp-action="CreateSector">New Sector</a></li>
            <li> <a class="btn-default success" asp-area="" asp-controller="Warehouse" asp-action="CreateWarehouse">New Warehouse</a></li>
        </ul>
    </div>
    <div class="col-md-3">       
        <form class="navbar-form navbar-right" asp-controller="Manager" asp-action="Search" method="get">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Search by Manager" name="searchString" value="@ViewData["searchString"]">
            </div>
        </form>
        <form class="navbar-form navbar-right" asp-controller="Sector" asp-action="Search" method="get">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Search by Sector" name="searchString" value="@ViewData["searchString"]">
            </div>
        </form>
        <form class="navbar-form navbar-right" asp-controller="Warehouse" asp-action="Search" method="get">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Search by Warehouse" name="searchString" value="@ViewData["searchString"]">
            </div>
        </form>
    </div>
</div>
