@using tct_Magazina.Models;
@model List<Manager>
@{
    ViewData["Title"] = "GetAllManagers";
}

<h2>All Managers</h2>


<form class="navbar-form navbar-right" asp-controller="Manager" asp-action="Search" method="get">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Search by Manager" name="searchString" value="@ViewData["searchString"]">
    </div>
</form>

<button type="button" class="btn btn-default">@Html.ActionLink("Create","CreateManager","Manager")</button>

@if (Model.Any())
{
    <table class="table table-responsive">
        <thead>
            <tr class="info">
                <td> Name</td>
                <td> Phone Number</td>
                <td> E-Mail</td>
                <td> Date of Birth</td>
                <td> Last Modified: </td>

            </tr>


        </thead>


        <tbody>
            @foreach (Manager manager in Model)
            {
            <tr>

                <td>@manager.Name</td>
                <td>@manager.PhoneNumber</td>
                <td>
                    @manager.email
                </td>

                <td>
                    @manager.DateOfBirth.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @manager.DateTimeModified

                </td>
                <td type="button" class="btn btn-default success ">@Html.ActionLink("Edit", "EditManager", "Manager", new { @id = manager.ManagerId })</td>

                <td type="button" class="btn btn-default danger ">@Html.ActionLink("Delete", "Delete", "Manager", new { @id = manager.ManagerId })</td>

            </tr>

            }


        </tbody>





    </table>


}

else
{ <h1 class="text-center text-danger">There is no Managers</h1>

}