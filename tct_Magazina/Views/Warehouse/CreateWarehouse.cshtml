@using tct_Magazina.Enums;
@model tct_Magazina.ViewModels.WarehouseViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("CreateWarehouse", "Warehouse", FormMethod.Post))

{

    <p class="alert alert-info">All fields are <strong>Required</strong></p>


    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

    </div>




    <div class="form-group">
        <label>Sector</label>
        @Html.DropDownListFor(m => m.SectorSectorId, new SelectList(Model.Sectors.Select(x => new { Value = x.SectorId, Text = x.Name }), "Value", "Text"),
                             "Select a sector",
                             htmlAttributes: new { @class = "form-control border-input" })
        @Html.ValidationMessageFor(model => model.SectorSectorId, "", new { @class = "text-danger" })
    </div>



    <div class="form-group">
        @Html.LabelFor(m => m.Location)
        @Html.DropDownListFor(m => m.Location, Html.GetEnumSelectList<WarehouseLocation>(), "Warehouse Location", new { @class = "form-control", placeholder = "Tirana" })
        @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NoOfWorkers)
        @Html.TextBoxFor(m => m.NoOfWorkers, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NoOfWorkers, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Area)
        @Html.TextBoxFor(m => m.Area, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Area, "", new { @class = "text-danger" })

    </div>


    <button type="submit" class="btn btn-secondary"> Create Warehouse</button>

}
