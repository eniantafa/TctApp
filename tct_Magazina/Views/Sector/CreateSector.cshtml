
@model tct_Magazina.ViewModels.SectorViewModel
@{
    ViewData["Title"] = "Create Sector";
}

<h2>Create Sector</h2>

<p class="alert alert-info">All fields are <strong>Required</strong></p>

@using (Html.BeginForm("CreateSector", "Sector", FormMethod.Post))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        <label>Manager</label>

        @Html.DropDownListFor(m => m.ManagerId, new SelectList(Model.Managers.Select(x => new { Value = x.ManagerId, Text = x.Name }), "Value", "Text"),
                             "Select a Manager",
                             htmlAttributes: new { @class = "form-control border-input" })
        @Html.ValidationMessageFor(model => model.ManagerId, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "+35569XXXXXXXX" })
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })

    </div>




    <button type="submit" class="btn-primary"> Save Sector</button>
}
