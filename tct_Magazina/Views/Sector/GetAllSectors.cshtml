@using tct_Magazina.Models;
@model List<Sector>
@{
    ViewData["Title"] = "All Sectors";
}

<h2>All Sectors</h2>

<form class="navbar-form navbar-right" asp-controller="Sector" asp-action="Search" method="get">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Search by Sector" name="searchString" value="@ViewData["searchString"]">
    </div>
</form>

<button type="button" class="btn btn-default">@Html.ActionLink("Create", "CreateSector", "Sector")</button>

@if (Model.Any())
{
    <table class="table table-responsive">
        <thead>
            <tr class="info">
                <td> Name</td>
                <td> Description</td>
                <td>Last Modified:</td>
            </tr>


        </thead>


        <tbody>
            @foreach (Sector sector in Model)
            {
                <tr>

                    <td>@sector.Name</td>
                    <td>@sector.Description</td>
                    <td>@sector.DateTimeModified</td>
                    <td type="button" class="btn btn-default success"> @Html.ActionLink("Edit", "EditSector", "Sector", new { @id = sector.SectorId })</td>

                    <td type="button" class="btn btn-default danger"> @Html.ActionLink("Delete", "Delete", "Sector", new { @id = sector.SectorId })</td>
                </tr>

            }


        </tbody>





    </table>


}

else
{ <h1 class="text-center text-danger">There is no Sectors</h1>

}
