@model tct_Magazina.Models.Sector
@{
    ViewData["Title"] = "EditSector";
}

<h2>Edit Sector</h2>

@using (Html.BeginForm("EditConfirm", "Sector", FormMethod.Post))
{
    @Html.HiddenFor(m => m.SectorId)

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

    </div>



    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "+35569XXXXXXXX" })
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })

    </div>




    <button type="submit" class="btn-primary"> Edit Sector</button>



}


